<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.sopang.counts">
<resultMap id="memberResult" type="MemberVO">
		<result property="sopang_money" column="sopang_money" />
	</resultMap>	
	
	<select id="cartLen" parameterType="String" resultType="int">
        <![CDATA[
        select count(*) from t_shopping_cart
			  where member_id=#{member_id}
	    ]]>
	</select>
	
	<select id="deliveringLen" parameterType="String" resultType="int">
        <![CDATA[
        select count(*) from t_shopping_order
			  where member_id = #{member_id} and delivery_state='delivering'
	    ]]>
	</select>
	
	<select id="sopang_money" parameterType="String" resultType="java.lang.Long">
        <![CDATA[
        select sopang_money from t_shopping_member where member_id = #{member_id}
	    ]]>
	</select>
	
	
	
</mapper>

